package exercicio_secao10_lista;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Teste {

	public static void main(String[] args) {
		Scanner leia = new Scanner(System.in);
		
		System.out.println("Quantos empregados serão registrados ?");
		int n = leia.nextInt();
		List<Empregado1> emp = new ArrayList<>();
		
		for (int i = 0; i < n; i++) {
			System.out.println("Empregado #" + i + ": ");
			System.out.print("Id: ");
			int id = leia.nextInt();
			System.out.println("Nome: ");
			String nome = leia.nextLine();
			System.out.println("Salário: ");
			double salario = leia.nextDouble();
			emp.add(new Empregado1(id, nome, salario));
		}
		
		System.out.print("Entre o id do empregado que terá aumento de salário: ");
		int id = leia.nextInt();
		
		Empregado1 empr = emp.stream().filter(x -> x.getId() == id).findFirst().orElse(null);
		
		
		
		
	}
}
