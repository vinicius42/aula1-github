package secao10;

import java.util.ArrayList;
import java.util.List;

public class Listas {

	public static void main(String[] args) {
		// Na lista você vai add ou removendo elementos conforme necessidade, diferente do vetor
		// Lista inicia vazia
		
		List<String> list = new ArrayList<>(); // Lista não acc tipos primitivos, não posso colocar o "int".
		
		list.add("Maria");
		list.add("Alex");
		list.add("Bob");
		list.add("Anna");
		list.add(2, "Marco");
		
		System.out.println(list.size()); // Tamanho da lista
		
		list.remove("Anna")args;
		
		for (String x : list) {
			System.out.println(x);
		}

	}

}
