package exercicio_secao9;

public class Conta {
	public static final double TAXA = 5.00;
	public double conta;
	public String nome;
	public double valor;
	
	public Conta() {
		
	}
	
	public Conta(double conta, String nome, double valor) {
		this.conta = conta;
		this.nome = nome;
		this.valor = valor;
	}
	
	public Conta(double conta, String nome) {
		this.conta = conta;
		this.nome = nome;
	}
	
	public double Deposito(double valor) {
		return this.valor + valor;
	}
	
	public double Retirar(double retirar, double valor) {
		return valor - retirar - TAXA;
	}
	
	

}
